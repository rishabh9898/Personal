# AI Provider Configuration
# Options: "claude" or "openai"
AI_PROVIDER=claude

# Claude (Anthropic) Configuration - Default and Recommended
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI Configuration - Alternative Option
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4-turbo-preview

# LinkedIn Credentials (optional, for logged-in scraping)
LINKEDIN_EMAIL=your_linkedin_email
LINKEDIN_PASSWORD=your_linkedin_password

# Indeed Configuration
INDEED_API_KEY=your_indeed_api_key_if_available

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG_MODE=True

# Database
DATABASE_URL=sqlite:///./hr_recruitment.db

# Scraping Settings
HEADLESS_BROWSER=True
SCRAPE_DELAY=2
MAX_CANDIDATES_PER_SEARCH=50

# Agent Settings
MAX_CONCURRENT_AGENTS=3
AGENT_TIMEOUT=300
